<h1>all tasks</h1>

<ul>
 <% @tasks.each do |task| %>
    <p><%= link_to task.title, task_path(task) %></p>
    <p><%= task.details %></p>
    <p><%= task.completed %></p>
    <p>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
 <% end %>

</ul>
